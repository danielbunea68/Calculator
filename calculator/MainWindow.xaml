<Window x:Class="calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:calculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="350">


    <Grid Margin="10" RenderTransformOrigin="0.5,0.5">
        <Grid.RowDefinitions>
            <!--These is for output-->
            <RowDefinition Height="100"/>

            <!--These are for the numbers-->
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>






        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>

        <TextBlock Margin="5"
            x:Name="OutputTextBlock"
            Grid.Row="0" 
            Grid.Column="0" 
            Grid.ColumnSpan="4"
            VerticalAlignment="Bottom"
            Text="{Binding Output, UpdateSourceTrigger=PropertyChanged}"
            FontSize="50"
            TextAlignment="Right"/>

        <Button x:Name="SevenBtn" 
             Content="7" 
             Grid.Row="3" 
             Grid.Column="0"
             FontSize="25"
             FontWeight="Bold"
             Click="NumBtn_Click"/>

        <Button x:Name="EightBtn" 
            Content="8" 
            Grid.Row="3" 
            Grid.Column="1"
            FontSize="25"
            FontWeight="Bold"
            Click="NumBtn_Click"/>

        <Button x:Name="NineBtn" 
            Content="9" 
            Grid.Row="3" 
            Grid.Column="2"
            FontSize="25"
            FontWeight="Bold"
            Click="NumBtn_Click"/>

        <Button x:Name="FourBtn" 
            Content="4" 
            Grid.Row="4" 
            Grid.Column="0"
            FontSize="25"
            FontWeight="Bold"
            Click="NumBtn_Click"/>

        <Button x:Name="FiveBtn" 
            Content="5" 
            Grid.Row="4" 
            Grid.Column="1"
            FontSize="25"
            FontWeight="Bold"
            Click="NumBtn_Click"/>

        <Button x:Name="SixBtn" 
         Content="6" 
         Grid.Row="4" 
         Grid.Column="2"
         FontSize="25"
         FontWeight="Bold"
         Click="NumBtn_Click"/>

        <Button x:Name="OneBtn" 
          Content="1" 
          Grid.Row="5" 
          Grid.Column="0"
          FontSize="25"
          FontWeight="Bold"
          Click="NumBtn_Click"/>

        <Button x:Name="TwoBtn" 
          Content="2" 
          Grid.Row="5" 
          Grid.Column="1"
          FontSize="25"
          FontWeight="Bold"
          Click="NumBtn_Click"/>

        <Button x:Name="ThreeBtn" 
          Content="3" 
          Grid.Row="5" 
          Grid.Column="2"
          FontSize="25"
          FontWeight="Bold"
          Click="NumBtn_Click"/>

        <Button x:Name="ZeroBtn" 
           Content="0" 
           Grid.Row="6" 
           Grid.Column="1"
           FontSize="25"
           FontWeight="Bold"
           Click="NumBtn_Click"/>

        <!--OPERATORUL PLUS-->
        <Button x:Name="PlusBtn" 
           Content="+" 
           Grid.Row="5" 
           Grid.Column="3"
           FontSize="25"
           FontWeight="Bold"
           Click="PlusBtn_Click"/>


        <!--OPERATORUL MINUS-->

        <Button x:Name="MinusBtn" 
           Content="-" 
           Grid.Row="4" 
           Grid.Column="3"
           FontSize="25"
           FontWeight="Bold"
           Click="MinusBtn_Click"/>

        <!--OPERATORUL INMULTIT-->
        <Button x:Name="TimesBtn" 
           Content="x" 
           Grid.Row="3" 
           Grid.Column="3"
           FontSize="25"
           FontWeight="Bold"
           Click="TimesBtn_Click"/>


        <!--OPERATORUL IMPARTIRE-->
        <Button x:Name="DivideBtn" 
           Content="" 
           Grid.Row="2" 
           Grid.Column="3"
           FontSize="25"
           FontWeight="Bold"
           Click="DivideBtn_Click"/>

        <!--OPERATORUL EGAL -->
        <Button x:Name="EqualsBtn" 
             Content="=" 
             Grid.Row="5" 
             Grid.Column="3"
             FontSize="25"
             FontWeight="Bold"
             Click="EqualsBtn_Click" Margin="0,45,0,0" Grid.RowSpan="2"/>

        <Button x:Name="InvertBtn" 
Content="1/x" 
Grid.Row="2" 
Grid.Column="0"
FontSize="25"
FontWeight="Bold"
Click="InvertBtn_Click"/>

        <Button x:Name="Squared_twoBtn" 
Content="x²" 
Grid.Row="2"
FontSize="25"
FontWeight="Bold"
Click="SquaredBtn_Click" Grid.ColumnSpan="2" Height="45" Margin="82,0,0,0" Grid.RowSpan="2" VerticalAlignment="Top"/>


        <Button x:Name="SqrtBtn" 
Content="√"
Grid.Row ="2" 
Grid.Column="2"
FontSize="25"
FontWeight="Bold"
Click="SqrtBtn_Click"/>

        <Button x:Name="PrecentBtn" 
Content="%"
Grid.Row ="1" 
Grid.Column="0"
FontSize="25"
FontWeight="Bold"
Click="PrecentBtn_Click" Height="45" Grid.RowSpan="2" VerticalAlignment="Top"/>

        <Button x:Name="ClearEntryBtn" 
Content="CE"
Grid.Row ="1" 
Grid.Column="1"
FontSize="25"
FontWeight="Bold"
Click="ClearEntryBtn_Click"/>

        <Button x:Name="ClearBtn" 
Content="C"
Grid.Row ="1" 
Grid.Column="2"
FontSize="25"
FontWeight="Bold"
Click="ClearBtn_Click" Grid.ColumnSpan="2" Height="45" Margin="0,0,82,0" Grid.RowSpan="2" VerticalAlignment="Top"/>
        <Button x:Name="NegateBtn" 
Content="+/-"
Grid.Row ="6" 
Grid.Column="0"
FontSize="25"
FontWeight="Bold"
Click="NegateBtn_Click"/>



    </Grid>
</Window>
