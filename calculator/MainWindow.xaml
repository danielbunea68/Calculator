<Window x:Class="calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:calculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="350">
    <Window.DataContext>
        <local:Calculator/>
    </Window.DataContext>

    <Grid Margin="10" RenderTransformOrigin="0.5,0.5">
        <Grid.RowDefinitions>
            <!--These is for output-->
            
            <RowDefinition Height="100"/>

            <!--These are for the numbers-->
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>

        <Menu VerticalAlignment="Top" Grid.Row="0" 
Grid.Column="5" >
            <MenuItem Header="">
                <MenuItem Header="Standard" Click="OpenStandardMode"/>
                <MenuItem Header="Programmer" Click="OpenProgrammerMode"/>
            </MenuItem>
        </Menu>

        <TextBlock Margin="5"
            x:Name="OutputTextBlock"
            Grid.Row="1" 
            Grid.Column="0" 
            Grid.ColumnSpan="4"
            VerticalAlignment="Bottom"
            Text="{Binding Output, UpdateSourceTrigger=PropertyChanged}"
            FontSize="25"
            TextAlignment="Right"/>
        <StackPanel x:Name="Baze" Grid.ColumnSpan="4">
            <!-- HEX Row -->
            <StackPanel Orientation="Horizontal">
                <Label Content="HEX" VerticalAlignment="Center" Width="50"/>
                <TextBlock x:Name="HexTextBlock" VerticalAlignment="Center"
                           Text="{Binding HexValue, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <!-- DEX Row -->
            <StackPanel Orientation="Horizontal">
                <Label Content="DEX" VerticalAlignment="Center" Width="50"/>
                <TextBlock x:Name="DexTextBlock" VerticalAlignment="Center" Text="{Binding DecValue, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <!-- OCT Row -->
            <StackPanel Orientation="Horizontal">
                <Label Content="OCT" VerticalAlignment="Center" Width="50"/>
                <TextBlock x:Name="OctTextBlock" VerticalAlignment="Center" Text="{Binding OctValue, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <!-- BIN Row -->
            <StackPanel Orientation="Horizontal">
                <Label Content="BIN" VerticalAlignment="Center" Width="50"/>
                <TextBlock x:Name="BinTextBlock" VerticalAlignment="Center" Text="{Binding BinValue, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
        </StackPanel>


        <Button x:Name="MemoryBtn" 
              Content="M>" 
              Grid.Row="3" 
              Grid.Column="3"
              FontSize="25"
              FontWeight="Bold"
              Click="MemoryShowBtn_Click" />


        <Button x:Name="MemoryClearBtn" 
             Content="MC" 
             Grid.Row="2" 
             Grid.Column="0"
             FontSize="25"
             FontWeight="Bold"
             Click="MemoryClearBtn_Click" Height="45" Grid.RowSpan="2" VerticalAlignment="Top"/>

        <Button x:Name="MemoryRecallBtn" 
             Content="MR" 
             Grid.Row="2" 
             Grid.Column="1"
             FontSize="25"
             FontWeight="Bold"
             Click="MemoryRecallBtn_Click"/>

        <Button x:Name="MemoryAddBtn" 
             Content="M+" 
             Grid.Row="2" 
             Grid.Column="2"
             FontSize="25"
             FontWeight="Bold"
             Click="MemoryAddBtn_Click" />

        <Button x:Name="MemorySubstractBtn" 
            Content="M-" 
            Grid.Row="2" 
            Grid.Column="3"
            FontSize="25"
            FontWeight="Bold"
            Click="MemorySubstractBtn_Click" />


        <Button x:Name="MemoryStoreBtn" 
            Content="MS" 
            Grid.Row="2" 
            Grid.Column="4"
            FontSize="25"
            FontWeight="Bold"
            Click="MemoryStoreBtn_Click"/>


        <Button x:Name="SevenBtn" 
             Content="7" 
             Grid.Row="5" 
             Grid.Column="0"
             FontSize="25"
             FontWeight="Bold"
             Click="NumBtn_Click"/>

        <Button x:Name="EightBtn" 
            Content="8" 
            Grid.Row="5" 
            Grid.Column="1"
            FontSize="25"
            FontWeight="Bold"
            Click="NumBtn_Click"/>

        <Button x:Name="NineBtn" 
            Content="9" 
            Grid.Row="5" 
            Grid.Column="2"
            FontSize="25"
            FontWeight="Bold"
            Click="NumBtn_Click"/>

        <Button x:Name="FourBtn" 
            Content="4" 
            Grid.Row="6" 
            Grid.Column="0"
            FontSize="25"
            FontWeight="Bold"
            Click="NumBtn_Click"/>

        <Button x:Name="FiveBtn" 
            Content="5" 
            Grid.Row="6" 
            Grid.Column="1"
            FontSize="25"
            FontWeight="Bold"
            Click="NumBtn_Click"/>

        <Button x:Name="SixBtn" 
             Content="6" 
             Grid.Row="6" 
             Grid.Column="2"
             FontSize="25"
             FontWeight="Bold"
             Click="NumBtn_Click"/>

        <Button x:Name="OneBtn" 
             Content="1" 
             Grid.Row="7" 
             Grid.Column="0"
             FontSize="25"
             FontWeight="Bold"
             Click="NumBtn_Click"/>

        <Button x:Name="TwoBtn" 
             Content="2" 
             Grid.Row="7" 
             Grid.Column="1"
             FontSize="25"
             FontWeight="Bold"
             Click="NumBtn_Click"/>

        <Button x:Name="ThreeBtn" 
             Content="3" 
             Grid.Row="7" 
             Grid.Column="2"
             FontSize="25"
             FontWeight="Bold"
             Click="NumBtn_Click"/>

        <Button x:Name="ZeroBtn" 
           Content="0" 
           Grid.Row="8" 
           Grid.Column="1"
           FontSize="25"
           FontWeight="Bold"
           Click="NumBtn_Click"/>

        <!--OPERATORUL PLUS-->
        <Button x:Name="PlusBtn" 
           Content="+" 
           Grid.Row="7" 
           Grid.Column="3"
           FontSize="25"
           FontWeight="Bold"
           Click="OperationBtn_Click"/>


        <!--OPERATORUL MINUS-->

        <Button x:Name="MinusBtn" 
           Content="-" 
           Grid.Row="6" 
           Grid.Column="3"
           FontSize="25"
           FontWeight="Bold"
           Click="OperationBtn_Click"/>

        <!--OPERATORUL INMULTIT-->
        <Button x:Name="TimesBtn" 
           Content="x" 
           Grid.Row="5" 
           Grid.Column="3"
           FontSize="25"
           FontWeight="Bold"
           Click="OperationBtn_Click"/>


        <!--OPERATORUL IMPARTIRE-->
        <Button x:Name="DivideBtn" 
           Content="" 
           Grid.Row="4" 
           Grid.Column="3"
           FontSize="25"
           FontWeight="Bold"
           Click="OperationBtn_Click"/>

        <!--OPERATORUL EGAL -->
        <Button x:Name="EqualsBtn" 
             Content="=" 
             Grid.Row="8" 
             Grid.Column="3"
             FontSize="25"
             FontWeight="Bold"
             Click="EqualsBtn_Click" />

        <Button x:Name="InvertBtn" 
            Content="1/x" 
            Grid.Row="4" 
            Grid.Column="0"
            FontSize="25"
            FontWeight="Bold"
            Click="InvertBtn_Click"/>

        <Button x:Name="Squared_twoBtn" 
            Content="x²" 
            Grid.Row="4"
            FontSize="25"
            FontWeight="Bold"
            Click="SquaredBtn_Click" Grid.Column="1"/>


        <Button x:Name="SqrtBtn" 
            Content="√"
            Grid.Row ="4" 
            Grid.Column="2"
            FontSize="25"
            FontWeight="Bold"
            Click="SqrtBtn_Click"/>

        <Button x:Name="PrecentBtn" 
            Content="%"
            Grid.Row ="3" 
            Grid.Column="0"
            FontSize="25"
            FontWeight="Bold"
            Click="PrecentBtn_Click" />

        <Button x:Name="ClearEntryBtn" 
            Content="CE"
            Grid.Row ="3" 
            Grid.Column="1"
            FontSize="25"
            FontWeight="Bold"
            Click="ClearEntryBtn_Click"/>

        <Button x:Name="ClearBtn" 
            Content="C"
            Grid.Row ="3" 
            Grid.Column="2"
            FontSize="25"
            FontWeight="Bold"
            Click="ClearBtn_Click"/>
        
        <Button x:Name="NegateBtn" 
            Content="+/-"
            Grid.Row ="8" 
            Grid.Column="0"
            FontSize="25"
            FontWeight="Bold"
            Click="NegateBtn_Click"/>
        
        <Button x:Name="ABtn" 
      Content="A"
      Grid.Row ="3" 
      Grid.Column="4"
      FontSize="25"
      FontWeight="Bold"
      Click="NumBtn_Click"/>
        
        
        <Button x:Name="BBtn" 
 Content="B"
 Grid.Row ="4" 
 Grid.Column="4"
 FontSize="25"
 FontWeight="Bold"
 Click="NumBtn_Click"/>

        <Button x:Name="CBtn" 
 Content="C"
 Grid.Row ="5" 
 Grid.Column="4"
 FontSize="25"
 FontWeight="Bold"
 Click="NumBtn_Click"/>
        <Button x:Name="DBtn" 
 Content="D"
 Grid.Row ="6" 
 Grid.Column="4"
 FontSize="25"
 FontWeight="Bold"
 Click="NumBtn_Click"/>

        <Button x:Name="EBtn" 
 Content="E"
 Grid.Row ="7" 
 Grid.Column="4"
 FontSize="25"
 FontWeight="Bold"
 Click="NumBtn_Click"/>


        <Button x:Name="FBtn" 
Content="F"
Grid.Row ="8" 
Grid.Column="4"
FontSize="25"
FontWeight="Bold"
Click="NumBtn_Click"/>

    </Grid>
</Window>
